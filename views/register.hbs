<div class="flex h-screen w-screen items-center justify-center">
  <div class="max-w-sm rounded-lg shadow-xl p-6" style="background-color: #262626">
    <div class="flex items-center justify-center">
      <img class="block heading-logo" src="/img/rev-logo.png" />
    </div>
    <div class="w-full">
      <form class="text-white rounded pt-6" action="/auth/register" method="post">
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="username">
            Username
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none"
            type="text" placeholder="Username" name="username" required>
        </div>
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="email">
            Email
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none"
            type="text" placeholder="Email" name="email" required>
        </div>
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none"
            type="password" placeholder="******************" name="password" required>
        </div>
        <div class="mb-6">
          <label class="block text-sm font-bold mb-2" for="confirm_password">
            Confirm Password
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none"
            type="password" placeholder="******************" name="confirm_password" required>
        </div>
        <div class="flex items-center justify-between">
          <button class="text-white font-bold py-2 px-4 rounded focus:outline-none w-full btn-default" type="submit">
            Sign Up
          </button>
        </div>
        <div class="text-center text-sm mt-4">
          By signing in, you agree to the
          <a class="no-underline link-default" href="#">
            Terms of Service
          </a> and
          <a class="no-underline link-default" href="#">
            Privacy Policy
          </a>
        </div>
      </form>
    </div>
  </div>
</div>